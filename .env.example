# =============================================================================
#  Talent Management Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values.
# Never commit .env.local to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Database (MySQL)
# -----------------------------------------------------------------------------
DATABASE_URL=""

# Individual connection details (used by Prisma)
DATABASE_HOST=""
DATABASE_USER=""
DATABASE_PASSWORD=""
DATABASE_NAME=""

# Development environment connection details
DEV_DATABASE_URL=""
DEV_DATABASE_NAME=""

# -----------------------------------------------------------------------------
# Okta Authentication
# -----------------------------------------------------------------------------
# Your Okta domain
OKTA_DOMAIN=""

# OAuth 2.0 client credentials from Okta application
OKTA_CLIENT_ID=""
OKTA_CLIENT_SECRET=""

# Okta API token for user management (Admin > Security > API > Tokens)
OKTA_API_TOKEN=""
# Okta issuer URL (use org-level: https://your-domain.okta.com)
# Note: Custom authorization servers (/oauth2/default) may require additional setup
OKTA_ISSUER=""

# Okta group ID for administrators
ADMIN_OKTA_GROUP_ID=""

# -----------------------------------------------------------------------------
# NextAuth.js
# -----------------------------------------------------------------------------
# Random secret for signing cookies (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=""

# Your application URL (no trailing slash)
NEXTAUTH_URL=""

# -----------------------------------------------------------------------------
# Email (SMTP)
# -----------------------------------------------------------------------------
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM_EMAIL=""
SMTP_FROM_NAME=""

# -----------------------------------------------------------------------------
# Webhook Security
# -----------------------------------------------------------------------------
# Secret for verifying webhook signatures
WEBHOOK_SECRET=""

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Application display name
APP_NAME=""

# Environment (development, staging, production)
NODE_ENV=""

# Logging level (debug, info, warn, error)
LOG_LEVEL=""

# Rate limiting (requests per minute for public endpoints)
RATE_LIMIT_MAX=""

# -----------------------------------------------------------------------------
# Optional: Error Tracking
# -----------------------------------------------------------------------------
# Sentry DSN for error reporting (optional)
SENTRY_DSN=""

# -----------------------------------------------------------------------------
# Optional: Backup Webhook
# -----------------------------------------------------------------------------
# URL to forward webhook data for backup/redundancy (optional)
BACKUP_WEBHOOK_URL=""

# -----------------------------------------------------------------------------
# Reserved: Future API Integrations
# -----------------------------------------------------------------------------
# Slots for future custom API endpoints
CUSTOM_API_ENDPOINT_1=""
CUSTOM_API_ENDPOINT_2=""
CUSTOM_API_ENDPOINT_3=""
